{
  "name": "green-hydrogen-backend",
  "version": "1.0.0",
  "description": "Backend API for Green Hydrogen Subsidy Disbursement System",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "echo \"No build step required for Node.js\"",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "keywords": [
    "blockchain",
    "smart-contracts",
    "green-hydrogen",
    "subsidy",
    "api"
  ],
  "author": "Green Hydrogen Development Team",
  "license": "MIT",
  "type": "commonjs",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/app.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "dependencies": {
    "axios": "^1.4.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.0.0",
    "ethers": "^6.15.0",
    "express": "^4.18.0",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.1",
    "pg": "^8.8.0"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "jest": "^30.1.1",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  }
}
